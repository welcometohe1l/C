{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Task: Build file",
            "type": "shell",
            "command": "clang",
            "args": [
                "-g3",
                "-std=c17",
                "-Wpadded",
                "-Wextra",
                // "-Werror",
                "-pedantic",
                "-D_FORTIFY_SOURCE=2",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Task: Remove build directory",
                "Task: Create build directory"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Task: Build program",
            "type": "shell",
            "command": "find",
            "args": [
                "${fileDirname}",
                "-name",
                "\"*.c\"",
                "-print0",
                "|",
                "xargs",
                "-0",
                "clang",
                "-g3",
                "-std=c17",
                "-Wpadded",
                "-Wextra",
                "-Werror",
                "-pedantic",
                "-D_FORTIFY_SOURCE=2",
                "-o",
                "${workspaceFolder}/build/${workspaceFolderBasename}"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Task: Remove build directory",
                "Task: Create build directory"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Task: Build project",
            "type": "shell",
            "command": "find",
            "args": [
                "${workspaceFolder}",
                "-name",
                "\"*.c\"",
                "-print0",
                "|",
                "xargs",
                "-0",
                "clang",
                "-std=c17",
                "-g",
                "-o",
                "${workspaceFolder}/build/${workspaceFolderBasename}"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Task: Remove build directory",
                "Task: Create build directory"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Task: Create build directory",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "Task: Remove build directory",
            "type": "shell",
            "command": "rm",
            "args": [
                "-r",
                "build"
            ]
        }
    ]
}